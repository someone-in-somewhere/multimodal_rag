# ============================================================================
# Multi-modal RAG System - Environment Configuration
# ============================================================================

# ============================================================================
# LLM Configuration
# ============================================================================

# Use local LLM via Ollama (true) or OpenAI API (false)
USE_LOCAL_LLM=true

# Ollama Configuration
# Note: gemma3:4b is good, but make sure it's pulled: ollama pull gemma2:4b
OLLAMA_MODEL=gemma2:4b
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# API & Security Configuration
# ============================================================================

# API Key for authentication
# ⚠️ CHANGE THIS IN PRODUCTION!
API_KEY=test-api-key

# Secret key for JWT tokens
# ✅ Good length, but should be more random in production
SECRET_KEY=my-super-secret-key-min-32-chars-long-abc123

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# Document Processing Configuration
# ============================================================================

CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ============================================================================
# OpenAI Configuration (Optional - for future use)
# ============================================================================

# Uncomment and set if you want to use OpenAI instead of Ollama
# OPENAI_API_KEY=sk-your-key-here
# OPENAI_MODEL=gpt-4o
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
