# ============================================================================
# Multi-modal RAG System V2 - Environment Configuration (NO AUTH)
# ============================================================================

# ============================================================================
# LLM Configuration
# ============================================================================
# Use local LLM via Ollama (true) or OpenAI API (false)
USE_LOCAL_LLM=true

# Ollama Configuration
# Note: gemma2:4b is good, but make sure it's pulled: ollama pull gemma2:4b
OLLAMA_MODEL=gemma2:4b
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# API Configuration (NO AUTH!)
# ============================================================================
# Server Configuration
API_HOST=127.0.0.1
API_PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=multimodal_rag

# ============================================================================
# Document Processing Configuration
# ============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ============================================================================
# Parser V3 Settings (NEW!)
# ============================================================================
EXTRACT_PDF_EMBEDDED_IMAGES=true
CONVERT_PDF_PAGES_TO_IMAGES=true
MAX_PDF_PAGES_AS_IMAGES=50
ENABLE_OCR=true

# ============================================================================
# Embedder V2 Settings (NEW!)
# ============================================================================
EMBEDDER_BATCH_SIZE=32
EMBEDDER_ENABLE_CACHE=true
EMBEDDER_CACHE_SIZE=1000

# ============================================================================
# Retriever V2 Settings (NEW!)
# ============================================================================
RETRIEVER_ENABLE_COMPRESSION=true
RETRIEVER_ENABLE_CACHE=true
RETRIEVER_CACHE_SIZE=100
RETRIEVER_CONNECTION_POOL_SIZE=10

# ============================================================================
# Summarizer V2 Settings (NEW!)
# ============================================================================
SUMMARIZER_ENABLE_CACHE=true
SUMMARIZER_CACHE_SIZE=500
SUMMARIZER_MAX_CONCURRENT=5
SUMMARIZER_MAX_RETRIES=3

# ============================================================================
# Model Configuration
# ============================================================================
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
CLIP_MODEL=ViT-B/32

# ============================================================================
# Storage Configuration
# ============================================================================
DATA_DIR=data
FIGURES_DIR=figures

# ============================================================================
# Other Settings
# ============================================================================
LOG_LEVEL=INFO
ENABLE_CORS=true
MAX_UPLOAD_SIZE=50

# ============================================================================
# OpenAI Configuration (Optional - for future use)
# ============================================================================
# Uncomment and set if you want to use OpenAI instead of Ollama
# OPENAI_API_KEY=sk-your-key-here
# OPENAI_MODEL=gpt-4o
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
