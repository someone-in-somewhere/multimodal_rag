# ============================================================================
# Multi-modal RAG System - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update values for your environment
# Command: cp .env.example .env

# ============================================================================
# LLM Configuration
# ============================================================================

# Use local LLM via Ollama (true) or OpenAI API (false)
USE_LOCAL_LLM=true

# Ollama Configuration (for local LLM)
# Available models: gemma2:4b, mistral, llama3, phi3, qwen, etc.
# Run 'ollama list' to see installed models
OLLAMA_MODEL=gemma2:4b
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration (when USE_LOCAL_LLM=false)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# API & Security Configuration
# ============================================================================

# API Key for authentication (change this in production!)
API_KEY=test-api-key

# Secret key for JWT tokens (minimum 32 characters, MUST be random in production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=my-super-secret-key-min-32-chars-long-change-this-in-production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# Database Configuration
# ============================================================================

# Redis Configuration (for document storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=multimodal_rag

# ============================================================================
# Document Processing Configuration
# ============================================================================

# Text chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters
TOP_K_RESULTS=5

# ============================================================================
# Model Configuration
# ============================================================================

# Embedding model for text
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, BAAI/bge-large-en-v1.5
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# CLIP model for image embeddings (optional)
# Options: ViT-B/32, ViT-L/14
CLIP_MODEL=ViT-B/32

# ============================================================================
# Storage Configuration
# ============================================================================

# Directories (relative to project root)
DATA_DIR=./data
FIGURES_DIR=./figures

# ============================================================================
# Optional: Advanced Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable CORS (for development)
ENABLE_CORS=true

# Max file upload size (in MB)
MAX_UPLOAD_SIZE=50

# Enable API rate limiting
ENABLE_RATE_LIMIT=false
RATE_LIMIT_PER_MINUTE=60
